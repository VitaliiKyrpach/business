include ../mixins/btnMixins.pug
//- div(class="fixed top-0 left-0 flex flex-col justify-between w-full h-full py-[24px] px-[40px] bg-white translate-x-[-100%] transition-transform z-10")
div(class="fixed top-0 right-0 w-full h-full bg-colorBackdrop backdrop-blur-[5px] opacity-0 pointer-events-none z-10 transition-all" data-type='menuBack')
    div(class='flex flex-col w-[45%] h-full py-[20px] px-[30px] bg-colorSec ml-auto translate-x-[100%] transition-transform' data-menu)
        button(class='block ml-auto w-[24px] h-[24px]' type='button' data-menu-close)
            svg(class='w-full h-full')
                use(href='./img/sprite.svg#icon-close')
        ul(class='flex flex-col gap-[15px] items-center mt-[75px] mb-[50px]')
            each page in pages
                li
                    if page == 'Product'
                        a(class='leading-[1,75] hover:font-medium transition-[font]' href =`index.html`) #{page}
                    else
                        //- a(class='leading-[1,75] hover:font-medium transition-[font]' href =`/${page.toLowerCase()}.html`) #{page}
                        a(class='leading-[1,75] hover:font-medium transition-[font]' href =`404.html`) #{page}
        div(class='flex gap-[24px] flex-col items-center w-[110px] mx-auto')
            +btn('Sign In', 'colorPrimAdd', 'colorSec', 'colorSecAddHov', 'semibold', '16px', '102px', '42px', '4px', 'colorAccentAdd')(modal="login", class='modal')
            +btn('Sign Up', 'colorSec', 'colorAccent', 'colorAccentHov', 'semibold', '16px', '110px', '42px', '4px')(modal="register", class='modal')
